{
  "name": "medisolbv/pagination",
  "version": "1.0.0",
  "description": "A simple package to allow easy generation of pagination links",
  "license": "MIT",
  "type": "library",
  "autoload": {
    "psr-4": {
      "Medisol\\Pagination\\": "src/"
    }
  },
  "require": {
    "php": "^8.2"
  },
  "autoload-dev": {
    "psr-4": {
      "Medisol\\Pagination\\Tests\\": "tests/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^11.3",
    "squizlabs/php_codesniffer": "*",
    "phpstan/phpstan": "^1.12"
  },
  "scripts": {
    "qa": "./vendor/bin/phpunit && ./vendor/bin/phpcs && ./vendor/bin/phpstan analyse"
  }
}
